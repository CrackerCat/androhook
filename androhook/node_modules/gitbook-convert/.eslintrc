{
    "rules": {
        // Use indentation of 4 spaces
        "indent": [ 2, 4 ],

        // File should end with a new line
        "eol-last": 2,

        // No extra whitespaces at the end of lines
        "no-trailing-spaces": 2,

        // Use single quotes
        "quotes": [ 2, "single" ],

        // Use unix line break (\n and not \r\n)
        "linebreak-style": [ 2, "unix" ],

        // Require object shorthand (see spec/object-shorthand.js)
        "object-shorthand": [ 2, "always" ],

        // Always end lines with semi-colons
        "semi": [ 2, "always" ],

        // Dont accept unused variables
        "no-unused-vars": [ 2, {
            "vars": "all",
            "args": "none"
        } ],

        "no-extra-boolean-cast": [ OFF ],

        // Require space between comment and content
        "spaced-comment": [ 2, "always" ],

        // Spacing
        "block-spacing":                 2,
        "keyword-spacing":               [ 2, { "after": true, "before": true } ],
        "space-in-parens":               [ 2, "never" ],
        "space-before-blocks":           2,
        "space-before-function-paren":   [2, "never"],
        "space-infix-ops":               2,
        "space-unary-ops":               2,
        "template-curly-spacing":        [2, "never"],
        "no-whitespace-before-property": 2,
        "no-spaced-func":                2,
        // Avoid multi-spaces except for imports, properties
        "no-multi-spaces":               [ 2, {
            "exceptions": {
                "ImportDeclaration":    true,
                "Property":             true,
                "VariableDeclarator":   true,
                "AssignmentExpression": true
            }
        } ],
        "no-mixed-spaces-and-tabs":      2,
        "no-multiple-empty-lines":       [ 2, { "max": 2, "maxEOF": 1 }],
        "key-spacing":                   [ 2, {
            "beforeColon": false,
            "afterColon": true,
            "mode": "minimum"
        } ],
        "lines-around-comment": [ 1, {
            "beforeBlockComment": true,
            "afterBlockComment": false
        } ],

        // Require presence of radix in parseInt
        "radix": 1,

        // JS Weird syntax
        "no-with":                    2,
        "no-void":                    2,
        "no-throw-literal":           2,
        "no-shadow-restricted-names": 2,
        "no-shadow":                  1,
        "no-sequences":               2,
        "no-redeclare":               2,
        "no-new-symbol":              2,
        "no-new-object":              2,
        "no-negated-in-lhs":          2,
        "no-native-reassign":         1,
        "new-parens":                 2,
        "no-array-constructor":       2,
        "no-dupe-args":               2,
        "comma-dangle":               [ 2, "never" ],
        "comma-style":                [ 2, "last" ],
        "computed-property-spacing":  [ 2, "never" ],
        "dot-location":               [ 2, "property" ],

        // functions
        "no-func-assign": 1,

        // Regexp
        "no-regex-spaces": 1,
        "no-invalid-regexp": 1,

        // ES6
        // Use const and let instead of var
        "no-var":                  2,
        "prefer-spread":           2,
        "prefer-template":         OFF,
        "prefer-rest-params":      1,
        "no-useless-call":         2,
        "no-use-before-define":    [ 1, { "functions": false } ],
        "prefer-const":            [ 2, { "destructuring": "all" } ],
        "no-useless-computed-key": 1,
        "no-useless-constructor":  1,
        "no-unused-expressions":   1,
        "no-unreachable":          2,
        "no-undef":                2,
        "constructor-super":       2,
    },
    "env": {
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended"
}
